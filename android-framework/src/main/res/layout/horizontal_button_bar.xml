<?xml version="1.0" encoding="utf-8"?>

<!-- Material Dialog Buttons -->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/button_bar"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/dialog_button_bar_vertical_padding"
	android:paddingLeft="@dimen/dialog_button_bar_horizontal_padding"
	android:paddingRight="@dimen/dialog_button_bar_horizontal_padding"
	android:paddingTop="@dimen/dialog_button_bar_vertical_padding">

	<Button
		android:id="@android:id/button3"
		style="@style/Material.Dialog.Button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:paddingLeft="@dimen/dialog_button_horizontal_padding"
		android:paddingRight="@dimen/dialog_button_horizontal_padding"
		android:visibility="gone"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:orientation="horizontal">

		<Button
			android:id="@android:id/button2"
			style="@style/Material.Dialog.Button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/dialog_button_bar_spacing"
			android:layout_marginStart="@dimen/dialog_button_bar_spacing"
			android:paddingLeft="@dimen/dialog_button_horizontal_padding"
			android:paddingRight="@dimen/dialog_button_horizontal_padding"
			android:visibility="gone"/>

		<Button
			android:id="@android:id/button1"
			style="@style/Material.Dialog.Button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/dialog_button_horizontal_padding"
			android:paddingRight="@dimen/dialog_button_horizontal_padding"
			android:visibility="gone"/>

	</LinearLayout>
</RelativeLayout>