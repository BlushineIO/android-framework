<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:layout_marginBottom="@dimen/list_margin_top_bottom"
			  android:layout_marginTop="@dimen/list_margin_top_bottom"
			  android:orientation="vertical">

	<LinearLayout
		style="@style/Material.ListItem"
		android:layout_height="@dimen/list_item_height_one_line">

		<ImageView
			style="@style/Material.ListItem.Icon"
			android:src="@drawable/clear_36dp"
			android:tint="@color/accent"
			/>

		<TextView
			style="@style/Material.ListItem.IconTextContainer"
			android:text="A really long text that doesn't fit the layout"
			/>

		<CheckBox
			android:id="@+id/bug_checkbox"
			style="@style/Material.ListItem.Action"/>
	</LinearLayout>

	<View style="@style/Material.ListDivider"/>

	<EditText
		android:id="@+id/title_edit"
		style="@style/Material.ListItem.EditFull"
		android:hint="@string/feedback_title"/>

	<View style="@style/Material.ListDivider"/>


	<EditText
		android:id="@+id/message_edit"
		style="@style/Material.ListItem.EditFull"
		android:layout_height="match_parent"
		android:gravity="top"
		android:hint="@string/feedback_message"
		android:inputType="textMultiLine"
		android:minLines="4"
		android:padding="@dimen/list_item_padding"/>


</LinearLayout>