<resources xmlns:tools="http://schemas.android.com/tools">

	<!--****************-->
	<!-- Material Style -->
	<!--****************-->
	<!-- Base application theme. -->
	<style name="Material" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorHighlight">@color/text_highlight</item>
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="android:textColorSecondary">@color/text_secondary</item>
		<item name="android:textColorHint">@color/text_hint_disabled</item>
		<item name="android:textColorPrimaryInverse">@color/text_white_primary</item>
		<item name="android:textColorSecondaryInverse">@color/text_white_secondary</item>
		<item name="actionOverflowButtonStyle">@style/Material.MenuButtonOverflow</item>
		<item name="android:actionOverflowButtonStyle">@style/Material.MenuButtonOverflow</item>
		<item name="android:actionMenuTextColor">@color/toolbar_title</item>
		<item name="actionMenuTextColor">@color/toolbar_title</item>
		<item name="colorButtonNormal">@color/accent</item>
		<item name="materialDialogTheme">@style/Material.Dialog</item>
		<item name="dialogTheme">@style/Material.Dialog</item>
		<item name="alertDialogTheme">@style/Material.Dialog.Alert</item>
		<item name="android:preferenceScreenStyle">@style/Material.PreferenceScreen</item>
		<item name="android:preferenceFragmentStyle">@style/Material.PreferenceScreen</item>
		<item name="android:listViewStyle">@style/Material.List.General</item>
	</style>

	<!--****************-->
	<!-- 	Toolbar		-->
	<!--****************-->
	<style name="Material.Toolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/primary</item>
		<item name="android:elevation" tools:targetApi="21">4dp</item>
		<item name="titleTextColor">@color/toolbar_title</item>
	</style>

	<style name="Material.MenuButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
		<item name="android:tint">@color/icon_toolbar</item>
	</style>

	<!--****************-->
	<!-- Headers & Text	-->
	<!--****************-->
	<style name="Material.Text">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Material.Text.H2">
		<item name="android:textSize">20sp</item>
		<item name="android:paddingTop">32dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart">@dimen/list_item_padding</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd">@dimen/list_item_padding</item>
	</style>

	<style name="Material.Text.H2.First">
		<item name="android:paddingTop">16dp</item>
	</style>

	<style name="Material.Text.Category">
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart">@dimen/list_item_padding</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd">@dimen/list_item_padding</item>
		<item name="android:layout_height">@dimen/list_item_height_one_line</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/text_black_secondary</item>
		<item name="materialFontFamily">medium</item>
	</style>

	<style name="Material.Text.Error">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/default_error_color</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:visibility">gone</item>
	</style>

	<!--****************-->
	<!--   Preferences	-->
	<!--****************-->
	<style name="Material.PreferenceScreen">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:padding">0dp</item>
	</style>

	<!--****************-->
	<!--   Buttons	-->
	<!--****************-->
	<style name="Material.Button" parent="Widget.AppCompat.Button"/>

	<style name="Material.Button.Borderless" parent="Widget.AppCompat.Button.Borderless"/>

	<style name="Material.Button.Borderless.Color">
		<item name="android:textColor">@color/accent</item>
	</style>

	<!--************************-->
	<!-- Floating Action Button	-->
	<!--************************-->
	<style name="Material.FloatingActionButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">bottom|right|end</item>
		<item name="android:layout_margin">@dimen/fab_margin</item>
	</style>

	<!--****************-->
	<!-- 	Dialogs		-->
	<!--****************-->
	<style name="Material.Dialog" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorHighlight">@color/text_highlight</item>
	</style>

	<style name="Material.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorHighlight">@color/text_highlight</item>
	</style>

	<!--****************-->
	<!-- 	  List	 	-->
	<!--****************-->
	<style name="Material.List">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="Material.List.General">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:padding">0dp</item>
		<item name="android:divider">@color/list_item_divider</item>
		<item name="android:dividerHeight">1dp</item>
	</style>

	<style name="Material.List.WithFloatingActionButton">
		<item name="android:layout_height">match_parent</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:paddingBottom">@dimen/list_fab_bottom_padding</item>
	</style>

	<!--****************-->
	<!-- 	List Item 	-->
	<!--****************-->
	<style name="Material.ListItem"/>

	<style name="Material.ListItem.Container">
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart" tools:targetApi="17">@dimen/list_item_padding</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Material.ListItem.Container.1">
		<item name="android:minHeight">@dimen/list_item_height_one_line</item>
	</style>

	<style name="Material.ListItem.Container.2">
		<item name="android:minHeight">@dimen/list_item_height_two_lines</item>
	</style>

	<style name="Material.ListItem.Container.3">
		<item name="android:minHeight">@dimen/list_item_height_three_lines</item>
	</style>

	<style name="Material.ListItem.Container.Avatar">
		<item name="android:minHeight">@dimen/list_item_height_avatar</item>
	</style>

	<style name="Material.ListItem.Container.1.Dense">
		<item name="android:minHeight">@dimen/list_item_height_one_line_dense</item>
	</style>

	<style name="Material.ListItem.Container.2.Dense">
		<item name="android:minHeight">@dimen/list_item_height_two_lines_dense</item>
	</style>

	<style name="Material.ListItem.Container.3.Dense">
		<item name="android:minHeight">@dimen/list_item_height_three_lines_dense</item>
	</style>

	<style name="Material.ListItem.Container.Avatar.Dense">
		<item name="android:minHeight">@dimen/list_item_height_avatar_dense</item>
	</style>

	<style name="Material.ListItem.Icon">
		<item name="android:tint">@color/icon</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Material.ListItem.Icon.Right">
		<item name="android:paddingEnd">@dimen/list_item_padding</item>
		<item name="android:paddingStart">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<!-- Use this when there only is a single text line -->
	<style name="Material.ListItem.Text.Single">
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart" tools:targetApi="17">@dimen/list_item_padding</item>
		<item name="android:paddingTop">@dimen/list_item_padding</item>
		<item name="android:paddingBottom">@dimen/list_item_padding</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon24">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_24
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon36">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_36
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon48">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_48</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_48
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense">
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/text_primary</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense.Icon24">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_24
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense.Icon36">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_36
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense.Icon48">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_48</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_48
		</item>
	</style>

	<style name="Material.ListItem.Text.Container">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingTop">@dimen/list_item_padding</item>
		<item name="android:paddingBottom">@dimen/list_item_padding</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Container.Icon24">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_24
		</item>
	</style>

	<style name="Material.ListItem.Text.Container.Icon36">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_36
		</item>
	</style>

	<style name="Material.ListItem.Text.Container.Icon48">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_48</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_48
		</item>
	</style>

	<style name="Material.ListItem.Text.Primary">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="Material.ListItem.Text.Secondary">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:maxLines">10</item>
	</style>

	<style name="Material.ListItem.Text.Primary.Dense">
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="Material.ListItem.Text.Secondary.Dense">
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/text_secondary</item>
	</style>

	<style name="Material.ListItem.Action">
		<item name="android:layout_width">36dp</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
	</style>

	<style name="Material.ListItem.Action.Left">
		<item name="android:layout_marginLeft">-4dp</item>
		<item name="android:layout_marginStart">-4dp</item>
		<item name="android:layout_marginRight">4dp</item>
		<item name="android:layout_marginEnd">4dp</item>
	</style>

	<style name="Material.ListItem.ActionContainer">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingEnd" tools:targetApi="17">8dp</item>
	</style>

	<style name="Material.ListItem.Action.Single">
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:layout_marginEnd" tools:targetApi="17">8dp</item>
	</style>

	<style name="Material.ListDivider">
		<item name="android:background">@color/list_item_divider</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
	</style>

	<!--****************-->
	<!--   Edit Fields	-->
	<!--****************-->
	<style name="Material.Edit">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textColorHint">@color/text_hint_disabled</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Material.Edit.WithLabel">
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingTop">8dp</item>
	</style>

	<style name="Material.Edit.WithLabel.Dense">
		<!--<item name="android:layout_height">wrap_content</item>-->
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:textSize">13sp</item>
	</style>

	<style name="Material.Edit.Full">
		<item name="android:layout_marginLeft">@dimen/edit_padding_left_right</item>
		<item name="android:layout_marginStart" tools:targetApi="17">
			@dimen/edit_padding_left_right
		</item>
		<item name="android:layout_marginRight">@dimen/edit_padding_left_right</item>
		<item name="android:layout_marginEnd" tools:targetApi="17">@dimen/edit_padding_left_right
		</item>
		<item name="android:background">@null</item>
		<item name="android:layout_height">@dimen/edit_height_full</item>
	</style>

	<style name="Material.Edit.Full.Dense">
		<item name="android:layout_height">@dimen/edit_height_full_dense</item>
	</style>

	<style name="Material.Edit.Full.Multiline">
		<item name="android:background">@null</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">top</item>
		<item name="android:paddingTop">@dimen/edit_padding_full_top_bottom</item>
		<item name="android:paddingBottom">@dimen/edit_padding_full_top_bottom</item>
	</style>

	<style name="Material.Edit.Full.Multiline.Dense">
		<item name="android:paddingTop">@dimen/edit_padding_full_top_bottom_dense</item>
		<item name="android:paddingBottom">@dimen/edit_padding_full_top_bottom_dense</item>
	</style>

	<style name="Material.EditContainer">
		<item name="android:paddingLeft">@dimen/edit_padding_left_right</item>
		<item name="android:paddingStart" tools:targetApi="17">@dimen/edit_padding_left_right</item>
		<item name="android:paddingRight">@dimen/edit_padding_left_right</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/edit_padding_left_right</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">16dp</item>
	</style>

	<style name="Material.EditContainer.AfterHeader">
		<item name="android:paddingTop">0dp</item>
	</style>

	<style name="Material.EditContainer.Dense">
		<item name="android:paddingTop">12dp</item>
	</style>


</resources>
