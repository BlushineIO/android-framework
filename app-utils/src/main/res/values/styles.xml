<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="Widget.Button" parent="Widget.AppCompat.Button">
		<item name="android:layout_margin">@dimen/button_margin</item>
	</style>

	<style name="Widget.Button.Accept" parent="Widget.Button">
		<item name="android:background">@drawable/button_accept</item>
	</style>

	<style name="Widget.Button.Primary" parent="Widget.Button">
		<item name="android:background">@drawable/button_primary</item>
	</style>

	<style name="Widget.Button.Cancel" parent="Widget.Button">
		<item name="android:background">@drawable/button_cancel</item>
	</style>

	<style name="Widget.Button.Default" parent="Widget.Button">
		<item name="android:background">@drawable/button_default</item>
	</style>
</resources>
