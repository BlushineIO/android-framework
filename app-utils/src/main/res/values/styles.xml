<resources xmlns:tools="http://schemas.android.com/tools">

	<!--****************-->
	<!-- Material Style -->
	<!--****************-->
	<!-- Base application theme. -->
	<style name="Material" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorPrimary">@color/text_color_primary</item>
		<item name="android:textColorSecondary">@color/text_color_secondary</item>
		<item name="android:textColorHint">@color/text_color_hint_disabled</item>
		<item name="android:textColorPrimaryInverse">@color/text_color_white_primary</item>
		<item name="android:textColorSecondaryInverse">@color/text_color_white_secondary</item>
		<item name="actionOverflowButtonStyle">@style/Material.MenuButtonOverflow</item>
		<item name="android:actionOverflowButtonStyle">@style/Material.MenuButtonOverflow</item>
	</style>

	<style name="Material.MenuButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
		<item name="android:tint">@color/icon_toolbar</item>
	</style>

	<!--****************-->
	<!-- 	Toolbar		-->
	<!--****************-->
	<style name="Material.Toolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/primary</item>
		<item name="android:elevation" tools:targetApi="21">4dp</item>
		<item name="titleTextColor">@color/toolbar_title</item>
	</style>

	<!--****************-->
	<!-- 	Dialogs		-->
	<!--****************-->
	<style name="Material.Dialog"></style>

	<style name="Material.Dialog.Fullscreen" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:padding">0dp</item>
		<item name="android:windowBackground">@color/background</item>
	</style>

	<!--****************-->
	<!-- 	List Item 	-->
	<!--****************-->
	<style name="Material.ListItem"></style>

	<style name="Material.ListItem.Container">
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart" tools:targetApi="17">@dimen/list_item_padding</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Material.ListItem.Container.1">
		<item name="android:layout_height">@dimen/list_item_height_one_line</item>
	</style>

	<style name="Material.ListItem.Container.2">
		<item name="android:layout_height">@dimen/list_item_height_two_lines</item>
	</style>

	<style name="Material.ListItem.Container.3">
		<item name="android:layout_height">@dimen/list_item_height_three_lines</item>
	</style>

	<style name="Material.ListItem.Container.Avatar">
		<item name="android:layout_height">@dimen/list_item_height_avatar</item>
	</style>

	<style name="Material.ListItem.Container.1.Dense">
		<item name="android:layout_height">@dimen/list_item_height_one_line_dense</item>
	</style>

	<style name="Material.ListItem.Container.2.Dense">
		<item name="android:layout_height">@dimen/list_item_height_two_lines_dense</item>
	</style>

	<style name="Material.ListItem.Container.3.Dense">
		<item name="android:layout_height">@dimen/list_item_height_three_lines_dense</item>
	</style>

	<style name="Material.ListItem.Container.Avatar.Dense">
		<item name="android:layout_height">@dimen/list_item_height_avatar_dense</item>
	</style>

	<style name="Material.ListItem.Icon">
		<item name="android:tint">@color/icon</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Material.ListItem.Text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<!-- Use this when there only is a single text line -->
	<style name="Material.ListItem.Text.Single">
		<item name="android:layout_width">0dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/text_color_primary</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon24">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_24
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon36">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_36
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon48">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_48</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_48
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Action">
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon24.Action">
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon36.Action">
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Single.Icon48.Action">
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense">
		<item name="android:layout_width">0dp</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/text_color_primary</item>
		<item name="android:layout_weight">1</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense.Icon24">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_24
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense.Icon36">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_36
		</item>
	</style>

	<style name="Material.ListItem.Text.Single.Dense.Icon48">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_48</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_48
		</item>
	</style>

	<style name="Material.ListItem.Text.Container">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Text.Container.Icon24">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_24
		</item>
	</style>

	<style name="Material.ListItem.Text.Container.Icon36">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_36</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_36
		</item>
	</style>

	<style name="Material.ListItem.Text.Container.Icon48">
		<item name="android:paddingLeft">@dimen/list_item_padding_left_text_with_icon_48</item>
		<item name="android:paddingStart" tools:targetApi="17">
			@dimen/list_item_padding_left_text_with_icon_48
		</item>
	</style>

	<style name="Material.ListItem.Text.Primary">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/text_color_primary</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="Material.ListItem.Text.Secondary">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/text_color_secondary</item>
	</style>

	<style name="Material.ListItem.Text.Primary.Dense">
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/text_color_primary</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="Material.ListItem.Text.Secondary.Dense">
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/text_color_secondary</item>
	</style>

	<style name="Material.ListItem.Action">
		<item name="android:layout_width">36dp</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
	</style>

	<style name="Material.ListItem.ActionContainer">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingEnd" tools:targetApi="17">8dp</item>
	</style>

	<style name="Material.ListItem.Action.Single">
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:layout_marginEnd" tools:targetApi="17">8dp</item>
	</style>

	<style name="Material.ListDivider">
		<item name="android:background">@color/list_item_divider</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
	</style>

	<style name="Material.Edit">
		<item name="android:textColor">@color/text_color_primary</item>
		<item name="android:textColorHint">@color/text_color_hint_disabled</item>
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart" tools:targetApi="17">@dimen/list_item_padding</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd" tools:targetApi="17">@dimen/list_item_padding</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/list_item_height_one_line</item>
	</style>

	<style name="Material.Edit.Full">
		<item name="android:background">@null</item>
	</style>

</resources>
