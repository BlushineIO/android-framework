<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>
		<item name="android:textColorSecondary">@color/textColorSecondary</item>
		<item name="android:textColorHint">@color/textColorHintDisabled</item>
	</style>

	<style name="Material">

	</style>

	<!-- All List Items -->
	<style name="Material.ListItem">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingLeft">@dimen/list_item_padding</item>
		<item name="android:paddingStart">@dimen/list_item_padding</item>
		<item name="android:paddingRight">@dimen/list_item_padding</item>
		<item name="android:paddingEnd">@dimen/list_item_padding</item>
	</style>

	<style name="Material.ListItem.Icon">
		<!--<item name="android:layout_alignParentLeft">true</item>-->
		<!--<item name="android:layout_alignParentStart">true</item>-->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!--<item name="android:layout_marginLeft">@dimen/list_item_padding</item>-->
		<!--<item name="android:layout_marginStart">@dimen/list_item_padding</item>-->
	</style>

	<style name="Material.ListItem.IconTextContainer">
		<!--<item name="android:layout_alignParentLeft">true</item>-->
		<!--<item name="android:layout_alignParentStart">true</item>-->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">@dimen/list_item_margin_left_text_with_icon</item>
		<item name="android:paddingStart">@dimen/list_item_margin_left_text_with_icon</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="Material.ListItem.Action">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!--<item name="android:layout_alignParentRight">true</item>-->
		<!--<item name="android:layout_alignParentEnd">true</item>-->
		<!--<item name="android:paddingRight">@dimen/list_item_padding</item>-->
		<!--<item name="android:paddingEnd">@dimen/list_item_padding</item>-->
	</style>

	<style name="Material.ListDivider">
		<item name="android:background">@color/list_item_divider</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
	</style>

	<style name="Material.ListItem.EditFull">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/list_item_height_one_line</item>
		<item name="android:background">@null</item>
	</style>

